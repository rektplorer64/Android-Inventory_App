<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="14dp"
    android:paddingRight="14dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateModified_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date Modified"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/dateModified_title">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Pref_dateModifiedFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="4dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    app:cardElevation="2dp"
                    app:contentPadding="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateModified_fromTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.1"
                            android:text="From"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="10sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateModified_from"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dateModified_fromTitle"
                            android:layout_marginEnd="30dp"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:text="7/21/2018"/>

                        <CheckBox
                            android:id="@+id/dateModified_fromSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/Pref_dateModifiedTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:foreground="?selectableItemBackgroundBorderless"
                    app:cardElevation="2dp"
                    app:contentPadding="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateModified_toTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.1"
                            android:text="To"
                            android:textAllCaps="true"
                            android:textColor="@android:color/black"
                            android:textSize="10sp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/dateModified_to"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/dateModified_toTitle"
                            android:layout_marginEnd="30dp"
                            android:textColor="@android:color/black"
                            android:textSize="18sp"
                            tools:text="7/21/2018"/>

                        <CheckBox
                            android:id="@+id/dateModified_toSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>