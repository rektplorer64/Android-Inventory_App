<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	android:paddingLeft="14dp"
	android:paddingRight="14dp">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginRight="14dp"
		android:layout_marginTop="14dp"
		android:src="@drawable/ic_date_range_black_24dp"/>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
			android:paddingBottom="14dp"
			android:paddingTop="14dp">

			<TextView
				android:id="@+id/dateCreated_title"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Date Created"
				android:textColor="@android:color/black"
				android:textSize="14sp"/>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@id/dateCreated_title">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:weightSum="2">

					<android.support.v7.widget.CardView
						android:id="@+id/Pref_dateCreatedFrom"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:layout_marginEnd="4dp"
						android:layout_marginStart="5dp"
						android:layout_marginTop="8dp"
						android:layout_weight="1"
						android:foreground="?selectableItemBackgroundBorderless"
						app:contentPadding="8dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

							<TextView
								android:id="@+id/dateCreated_fromTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="From"
								android:textSize="12sp"
								android:textAllCaps="true"/>

							<TextView
								android:id="@+id/dateCreated_from"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/dateCreated_fromTitle"
								android:text="7/10/2018"
								android:textColor="@android:color/black"/>

							<CheckBox
								android:id="@+id/dateCreated_fromSwitch"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentEnd="true"
								android:layout_centerVertical="true"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>

					<android.support.v7.widget.CardView
						android:id="@+id/Pref_dateCreatedTo"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginBottom="8dp"
						android:layout_marginEnd="8dp"
						android:layout_marginStart="4dp"
						android:layout_marginTop="8dp"
						android:layout_weight="1"
						android:foreground="?selectableItemBackgroundBorderless"
						app:contentPadding="8dp">

						<RelativeLayout
							android:layout_width="match_parent"
							android:layout_height="match_parent">

							<TextView
								android:id="@+id/dateCreated_toTitle"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:text="To"
								android:textSize="12sp"
								android:textAllCaps="true"/>

							<TextView
								android:id="@+id/dateCreated_to"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_below="@id/dateCreated_toTitle"
								android:text="7/21/2018"
								android:textColor="@android:color/black"/>

							<CheckBox
								android:id="@+id/dateCreated_toSwitch"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_alignParentEnd="true"
								android:layout_centerVertical="true"/>
						</RelativeLayout>
					</android.support.v7.widget.CardView>
				</LinearLayout>
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>