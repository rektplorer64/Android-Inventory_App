<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/searchActivityLayoutParent"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:orientation="vertical"
	tools:context=".SearchActivity">

	<android.support.design.widget.AppBarLayout
		android:id="@+id/appBarLayout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<com.lapism.searchview.widget.SearchView
			android:id="@+id/searchView"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:search_hint="Search items"
			app:search_logo="arrow"
			app:search_version="toolbar"/>
	</android.support.design.widget.AppBarLayout>

	<FrameLayout
		android:id="@+id/v_toolbar_extension"
		android:layout_width="match_parent"
		android:layout_height="84dp"
		android:layout_below="@id/appBarLayout"
		android:background="?attr/colorPrimary"
		android:elevation="4dp"/>

	<android.support.v7.widget.CardView
		android:id="@+id/filterCardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/appBarLayout"
		android:layout_marginLeft="7dp"
		android:layout_marginRight="7dp"
		android:layout_marginTop="7dp"
		android:elevation="5dp"
		app:cardCornerRadius="2dp"
		app:cardElevation="5dp">

		<FrameLayout
			android:id="@+id/searchSettingFrame"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		</FrameLayout>
	</android.support.v7.widget.CardView>

	<android.support.v7.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/filterCardView"
		android:layout_margin="8dp"
		android:elevation="5dp"
		app:cardElevation="5dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:id="@+id/totalSearchTextView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:padding="16dp"
				android:text="Total Search Result: 0"
				android:textAllCaps="true"
				android:textColor="@android:color/black"
				android:textStyle="bold"/>

			<android.support.v7.widget.RecyclerView
				android:id="@+id/resultsRecyclerView"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			</android.support.v7.widget.RecyclerView>
		</LinearLayout>

	</android.support.v7.widget.CardView>

</RelativeLayout>